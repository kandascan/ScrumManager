@model IEnumerable<WebDomain.Models.TeamVM>
@{
    ViewData["Title"] = "UserDashboard";
}

<h2>UserDashboard</h2>
<div class="row">
    <div class="col-md-4">
        <h3>Create new tem</h3>
        <a asp-action="CreateTeam" class="btn btn-primary">Create team</a>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-6">
        <h3>Teams where you are assigned</h3>

        <div class="card" style="width: 18rem;">
            <ul class="list-group list-group-flush">
                @foreach (var team in Model)
                {
                    if (@ViewBag.UserId == team.ProjectManagerId)
                    {
                        <li class="list-group-item active"><a class="card-link" asp-action="TeamDashboard" asp-route-teamId="@team.TeamId">@team.TeamName</a></li>
                    }
                    else
                    {
                        <li class="list-group-item"><a class="card-link" asp-action="TeamDashboard" asp-route-teamId="@team.TeamId">@team.TeamName</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>

